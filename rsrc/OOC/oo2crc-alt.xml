<!-- -*-mode: xml-*- -->

<!--
alternative configuration:

* tighter gcc compiler settings

* all run-time checks are disabled
-->

<configuration>
  <options>
    <set name='cc'>gcc</set>
    <set name='cflags'>-Wall -W -Wno-unused -Wno-format -Werror -O2 -Wno-uninitialized -g -pipe</set>
    <set name='ldflags'></set>
    <set name='libs'>-lgc </set>
  </options>

  <pragmas>
    <set name='Warnings'>TRUE</set>  <!-- not supported -->
    <set name='Assertions'>TRUE</set>
    
    <set name='IndexCheck'>FALSE</set>
    <set name='DerefCheck'>FALSE</set>
    <set name='OverflowCheck'>FALSE</set>  <!-- not supported -->
    <set name='CaseSelectCheck'>FALSE</set>
    <set name='FunctResult'>FALSE</set>
    <set name='TypeGuard'>FALSE</set>
    <set name='ConformantMode'>FALSE</set>  <!-- not supported -->
  </pragmas>
</configuration>