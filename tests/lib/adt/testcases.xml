<?xml version="1.0" encoding="ISO-8859-1"?>

<testcases profile="OOC Core Library" default-lang="O2">
  <test id="libadt_Object" type="run" file="LibAdtObject.Mod">
    Imports the module <code>ADT:Object</code>.
  </test>
  <test id="libadt_StringBuffer" type="run"
        file="LibAdtStringBuffer.Mod" output="LibAdtStringBuffer.Ref">
    Imports the module <code>ADT:StringBuffer</code>, and performs
    some operations on buffer instances.
  </test>
  <test id="libadt_Dictionary" type="run"
        file="LibAdtDictionary.Mod" output="LibAdtDictionary.Ref">
    Imports the various variants of module <code>ADT:Dictionary</code>.
  </test>
  <test id="libadt_ArrayList" type="run" file="LibAdtArrayList.Mod">
    Imports <code>ADT:ArrayList</code>.
  </test>
  <test id="libadt_LinkedList" type="run" file="LibAdtLinkedList.Mod">
    Imports <code>ADT:LinkedList</code>.
  </test>
  <test id="libadt_Arrays" type="run" file="LibAdtArrays.Mod">
    Imports <code>ADT:Arrays</code> and <code>ADT:Comparator</code>.
  </test>


  <test id="libadt_ObjectStorage" type="run"
        file="LibAdtObjectStorage.Mod" output="LibAdtObjectStorage.Ref">
    Uses <code>ADT:Object:Storage</code> to dump and restore a cyclic
    data structure containing strings and numbers.
  </test>
  
  
  <test id="libadt_StringSearch1" type="run" file="LibStringSearch1.Mod">
    Imports module <code>StringSearch</code> and derived modules.
  </test>
  <test id="libadt_StringSearch2" type="run"
        file="LibStringSearch2.Mod" output="LibStringSearch2.Ref">
    Does various string searches.
  </test>
</testcases>
